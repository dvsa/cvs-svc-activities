{
  "name": "cvs-svc-activities",
  "version": "0.0.1",
  "description": "A template application containing boilerplate code for writing CVS microservices.",
  "main": "handler.js",
  "scripts": {
    "start": "npm run tslint && BRANCH=local node_modules/serverless/bin/serverless offline start",
    "build": "node_modules/typescript/bin/tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:dev": "node_modules/typescript/bin/tsc && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "npm run build && BRANCH=local node_modules/.bin/mocha .build/tests/**/*.unitTest.js",
    "test-i": "node_modules/.bin/mocha .build/tests/**/*.intTest.js",
    "prepush": "BRANCH=local npm test && npm run tslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "tslint": "tslint src/**/*.ts tests/**/*.ts",
    "sonar-scanner": "npm run tslint && npm run coverage && sonar-scanner",
    "coverage": "BRANCH=local nyc mocha tests/unit/*.ts && nyc report --reporter=lcov",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/lambda-tester": "^3.5.1",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.456.0",
    "aws-xray-sdk": "^2.3.3",
    "date-fns": "^1.30.1",
    "joi": "^14.3.1",
    "node-yaml": "^3.2.0",
    "path-parser": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-register": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.25",
    "@types/chai": "^4.1.7",
    "@types/joi": "^14.3.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.14.6",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "audit-filter": "^0.4.3",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "lambda-tester": "^3.5.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "serverless": "^1.42.3",
    "serverless-dynamodb-local": "0.2.37",
    "serverless-offline": "^4.10.3",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.7",
    "source-map-support": "^0.5.12",
    "supertest": "^3.4.2",
    "swagger-jsdoc": "^3.2.9",
    "tslint": "^5.16.0",
    "tslint-jsdoc-rules": "^0.1.3",
    "typescript": "^3.4.5"
  }
}
